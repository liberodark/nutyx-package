# Depends on: gconf2, gconf-service, libnotify4, libappindicator1, libxtst6, libnss3, libxss1

description="A feature-rich client for Matrix.org"
packager="liberodark"
url="https://riot.im/"

name=riot-web
version=0.17.3

source=(https://riot.im/packages/debian/pool/main/r/riot-web/riot-web_${version}_amd64.deb)

build() {

ar x riot-web_${version}_amd64.deb
tar xvf data.tar.xz
cp -r opt $PKG
cp -r usr $PKG
}