description="Tool to manipulate IntelÂ® IA-32/X86-64 microcode bundles"
url="https://gitlab.com/iucode-tool/iucode-tool/wikis/home"

run=()

name=iucode-tool
version=2.3.1
release=1

source=(https://gitlab.com/iucode-tool/releases/raw/master/iucode-tool_2.3.1.tar.xz)

build(){
	cd "$SRC/${name}-$version"

	./configure \
		--prefix=/usr \
		--sbindir=/usr/bin
	make
}

package() {
	cd "$SRC/${name}-$version"

	make DESTDIR="$PKG/" install
}
